<% provide(:title, @usuario.username) %>
<h1><%= @usuario.username %></h1>
<div class="row">
  <aside class="span4">
    <section>
      <h5>
      <%= gravatar_for @usuario %>
      <%= @usuario.username %>
      <%= @usuario.email %>
      </h5>
    </section>
  </aside>
    <div class="span8">    
    <% if @usuario.microposts.any? %>
      <h3>Twittubits: (<%= @usuario.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
