<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Twittube", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Inicio", root_path %></li>
          <li><%= link_to "Ayuda", help_path %></li>
          <% unless signed_in? %>
          <li><%= link_to "Registrate", signup_path %></li>
          <% end %>
          <% if signed_in? %>
            <li><%= link_to "Usuarios", usuarios_path  %></li>
            <li><%= link_to "Perfil", current_user %></li>
            <li><%= link_to "Configuracion", edit_usuario_path(current_user)  %></li>
            <li><%= link_to "Cerrar Sesion", signout_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to "Iniciar Sesion", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>