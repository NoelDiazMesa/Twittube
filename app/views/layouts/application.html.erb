<!DOCTYPE html>
<html>
<head>
  <title>Twittube</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>


  <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
  <%= stylesheet_link_tag 'blueprint/screen', :media => 'print' %>
</head>
<body>
	<div class ="container">
		<header>
			<%= image_tag("twittube.png", :alt => "Logo", :class => "round") %>
			<nav class="round">
				<ul>
					<li><%= link_to "Home", '#' %></li>
					<li><%= link_to "Help", '#' %></li>
					<li><%= link_to "Sing in", '#' %></li>
				</ul>
			</nav>
		</header>
		<section class="round">
			<%= yield %>
		</section>
	</div>
</body>
</html>
